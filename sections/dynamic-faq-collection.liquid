{%- liquid
  assign section_heading = section.settings.heading
  assign section_width = section.settings.section_width
-%}

<style>
  .faq-collection {
    padding: 50px 0;
  }

  .faq-collection--regular {
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 25px;
    padding-right: 25px;
  }

  .faq-collection--wide {
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .faq-collection--full-width {
    padding-left: 25px;
    padding-right: 25px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .faq-collection__heading {
    text-align: center;
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 40px;
    text-transform: uppercase;
  }

  .faq-collection__item {
    border-bottom: 1px solid #e5e5e5;
  }

  .faq-collection__item:last-child {
    border-bottom: none;
  }

  .faq-collection__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 24px;
    cursor: pointer;
    background: white;
    transition: background 0.3s ease;
    user-select: none;
  }

  .faq-collection__header:hover {
    background: #f9fafb;
  }

  .faq-collection__question {
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    color: inherit;
    margin: 0;
  }

  .faq-collection__icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
    font-size: 1.5rem;
    font-weight: bold;
    flex-shrink: 0;
  }

  .faq-collection__item.active .faq-collection__icon {
    transform: rotate(45deg);
  }

  .faq-collection__content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .faq-collection__answer {
    padding: 0 24px 20px 24px;
    font-size: 15px;
    line-height: 1.6;
    color: #666;
  }

  .faq-collection__item.active .faq-collection__content {
    max-height: 500px;
  }

  .faq-collection__answer p {
    margin: 0 0 15px 0;
  }

  .faq-collection__answer p:last-child {
    margin-bottom: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const headers = document.querySelectorAll('.faq-collection__header');

    headers.forEach(header => {
      header.addEventListener('click', () => {
        const item = header.parentElement;
        item.classList.toggle('active');
      });
    });
  });
</script>

<section class="faq-collection faq-collection--{{ section_width }}">
  {%- if section_heading != blank -%}
    <h2 class="faq-collection__heading">
      {{ section_heading }}
    </h2>
  {%- endif -%}

  <div class="faq-collection__items">
    {%- for block in section.blocks -%}
      {%- if block.type == 'faq_item' -%}
        <div class="faq-collection__item" {{ block.shopify_attributes }}>
          <div class="faq-collection__header">
            <h3 class="faq-collection__question">{{ block.settings.question }}</h3>
            <span class="faq-collection__icon">+</span>
          </div>
          <div class="faq-collection__content">
            <div class="faq-collection__answer">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>

