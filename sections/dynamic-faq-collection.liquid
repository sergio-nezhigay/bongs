{%- liquid
  assign section_heading = section.settings.heading
  assign section_width = section.settings.section_width
-%}

<style>
  .faq-collection {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .faq-collection--regular {
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 25px;
    padding-right: 25px;
  }

  .faq-collection--wide {
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .faq-collection--full-width {
    padding-left: 25px;
    padding-right: 25px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .faq-collection__heading {
    text-align: center;
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 40px;
    text-transform: uppercase;
  }

  .faq-collection__item {
    border: 1px solid #e5e5e5;
    margin-bottom: 15px;
    background: white;
  }

  .faq-collection__item:last-child {
    margin-bottom: 0;
  }

  .faq-collection__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 30px 20px 20px;
    cursor: pointer;
    background: white;
    transition: background 0.3s ease;
    user-select: none;
  }

  .faq-collection__header:hover {
    background: #fafafa;
  }

  .faq-collection__question {
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    color: #1a1a1a;
    margin: 0;
    letter-spacing: 0.5px;
  }

  .faq-collection__icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    margin-left: 20px;
  }

  .faq-collection__item.active .faq-collection__icon {
    transform: rotate(180deg);
  }

  .faq-collection__content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .faq-collection__answer {
    padding: 20px 20px 20px 20px;
    font-size: 15px;
    line-height: 1.7;
    color: #666;
  }

  .faq-collection__item.active .faq-collection__content {
    max-height: 300px;
  }

  .faq-collection__item.active .faq-collection__header {
    border-bottom: 1px solid #e5e5e5;
  }

  .faq-collection__answer p {
    margin: 0 0 15px 0;
  }

  .faq-collection__answer p:last-child {
    margin-bottom: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const headers = document.querySelectorAll('.faq-collection__header');

    headers.forEach((header) => {
      header.addEventListener('click', () => {
        const item = header.parentElement;
        item.classList.toggle('active');
      });
    });
  });
</script>

<section class="faq-collection faq-collection--{{ section_width }}">
  {%- if section_heading != blank -%}
    <h2 class="faq-collection__heading">
      {{ section_heading }}
    </h2>
  {%- endif -%}

  <div class="faq-collection__items">
    {%- for block in section.blocks -%}
      {%- if block.type == 'faq_item' -%}
        <div class="faq-collection__item" {{ block.shopify_attributes }}>
          <div class="faq-collection__header">
            <h3 class="faq-collection__question">{{ block.settings.question }}</h3>
            <svg
              aria-hidden="true"
              focusable="false"
              class="faq-collection__icon"
              viewBox="0 0 28 16"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="m1.57 1.59 12.76 12.77L27.1 1.59"></path>
            </svg>
          </div>
          <div class="faq-collection__content">
            <div class="faq-collection__answer">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>

{% comment %}
  FAQPage structured data
  https://developers.google.com/search/docs/data-types/faqpage
{% endcomment %}

{%- assign faq_items_count = 0 -%}
{%- for block in section.blocks -%}
  {%- if block.type == 'faq_item' and block.settings.question != blank and block.settings.answer != blank -%}
    {%- assign faq_items_count = faq_items_count | plus: 1 -%}
  {%- endif -%}
{%- endfor -%}

{%- if faq_items_count > 0 -%}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {%- for block in section.blocks -%}
          {%- if block.type == 'faq_item' and block.settings.question != blank and block.settings.answer != blank -%}
            {
              "@type": "Question",
              "name": {{ block.settings.question | json }},
              "acceptedAnswer": {
                "@type": "Answer",
                "text": {{ block.settings.answer | strip_html | json }}
              }
            }{% unless forloop.last %},{% endunless %}
          {%- endif -%}
        {%- endfor -%}
      ]
    }
  </script>
{%- endif -%}

