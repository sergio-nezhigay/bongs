{%- liquid
  assign section_heading = section.settings.heading
  assign section_width = section.settings.section_width
-%}

<style>
  .faq-collection {
    padding: 50px 0;
  }

  .faq-collection--regular {
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 25px;
    padding-right: 25px;
  }

  .faq-collection--wide {
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .faq-collection--full-width {
    padding-left: 25px;
    padding-right: 25px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .faq-collection__heading {
    text-align: center;
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 40px;
    text-transform: uppercase;
  }

  .faq-collection__item {
    margin-bottom: 15px;
    border: 1px solid #e5e5e5;
  }

  .faq-collection__item:last-child {
    margin-bottom: 0;
  }

  .faq-collection__question {
    width: 100%;
    text-align: left;
    padding: 20px 30px 20px 20px;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    cursor: pointer;
    position: relative;
    list-style: none;
    color: inherit;
    background: none;
    border: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .faq-collection__question::-webkit-details-marker {
    display: none;
  }

  .faq-collection__question-text {
    flex: 1;
    padding-right: 30px;
    max-width: 85%;
  }

  .faq-collection__icon {
    position: absolute;
    right: 83px;
    width: 16px;
    height: 16px;
    transition: transform 0.35s ease;
    flex-shrink: 0;
    margin-left: 20px;
  }

  .faq-collection__item[open] .faq-collection__icon {
    transform: rotate(180deg);
  }

  .faq-collection__item[open] .faq-collection__question {
    padding-bottom: 10px;
  }

  .faq-collection__answer {
    padding: 0 30px 0 20px;
    font-size: 15px;
    line-height: 1.6;
    color: #666;
    overflow: hidden;
    height: 0;
    transition: height 0.35s cubic-bezier(0.4, 0, 0.2, 1), padding 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .faq-collection__answer-inner {
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.3s ease 0.1s, transform 0.3s ease 0.1s;
  }

  .faq-collection__item[open] .faq-collection__answer {
    padding-bottom: 20px;
  }

  .faq-collection__item[open] .faq-collection__answer-inner {
    opacity: 1;
    transform: translateY(0);
  }

  .faq-collection__answer p {
    margin: 0 0 15px 0;
  }

  .faq-collection__answer p:last-child {
    margin-bottom: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const faqItems = document.querySelectorAll('.faq-collection__item');

    faqItems.forEach((item) => {
      const summary = item.querySelector('.faq-collection__question');
      const answer = item.querySelector('.faq-collection__answer');
      const inner = item.querySelector('.faq-collection__answer-inner');

      summary.addEventListener('click', function (e) {
        e.preventDefault();

        const isOpen = item.hasAttribute('open');

        if (isOpen) {
          // Closing animation
          answer.style.height = answer.scrollHeight + 'px';
          requestAnimationFrame(() => {
            answer.style.height = '0px';
          });

          answer.addEventListener('transitionend', function onClose() {
            answer.removeEventListener('transitionend', onClose);
            item.removeAttribute('open');
          }, { once: true });
        } else {
          // Opening animation
          item.setAttribute('open', '');
          const targetHeight = inner.scrollHeight;
          answer.style.height = '0px';

          requestAnimationFrame(() => {
            answer.style.height = targetHeight + 'px';
          });
        }
      });
    });
  });
</script>

<section class="faq-collection faq-collection--{{ section_width }}">
  {%- if section_heading != blank -%}
    <h2 class="faq-collection__heading">
      {{ section_heading }}
    </h2>
  {%- endif -%}

  <div class="faq-collection__items">
    {%- for block in section.blocks -%}
      {%- if block.type == 'faq_item' -%}
        <details class="faq-collection__item" {{ block.shopify_attributes }}>
          <summary class="faq-collection__question">
            <span class="faq-collection__question-text">{{ block.settings.question }}</span>
            <svg
              aria-hidden="true"
              focusable="false"
              role="presentation"
              class="faq-collection__icon icon icon--wide icon-chevron-down"
              viewBox="0 0 28 16"
            >
              <path d="m1.57 1.59 12.76 12.77L27.1 1.59" stroke-width="2" stroke="currentColor" fill="none"></path>
            </svg>
          </summary>
          <div class="faq-collection__answer">
            <div class="faq-collection__answer-inner">
              {{ block.settings.answer }}
            </div>
          </div>
        </details>
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>

