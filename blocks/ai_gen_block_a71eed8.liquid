{% doc %}
  @prompt
    I want a 5 column row of an image, with text under neath where both the image and the text are linked to the link I enter. The image should be square, and not have a background. I should be able to change the link text color, link, image, and where the link goes to. I should be able to add upto 50 items per section, change it to be 50 blocks. All of the other section settings work well

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    padding: {{ section.settings.section_padding }}px;
  }

  .ai-image-grid-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .ai-image-grid-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .ai-image-grid-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: {{ section.settings.text_spacing }}px;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .ai-image-grid-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-image-grid-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-grid-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;opacity: 0.3;
  }

  .ai-image-grid-link-{{ ai_gen_id }}:hover .ai-image-grid-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-image-grid-text-{{ ai_gen_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    font-weight: {{ section.settings.text_weight }};
    line-height: 1.4;
    margin: 0;
  }

  .ai-image-grid-link-{{ ai_gen_id }}:hover .ai-image-grid-text-{{ ai_gen_id }} {
    color: {{ section.settings.text_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-image-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }
  }
{% endstyle %}

<div class="ai-image-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.image != blank or block.settings.text != blank %}
    <div class="ai-image-grid-item-{{ ai_gen_id }}">
      {% if block.settings.link != blank %}
        <a href="{{ block.settings.link }}" class="ai-image-grid-link-{{ ai_gen_id }}">
      {% else %}
        <div class="ai-image-grid-link-{{ ai_gen_id }}">
      {% endif %}
        <div class="ai-image-grid-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 400 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-image-grid-image-{{ ai_gen_id }}"
              loading="lazy"
              width="400"
              height="400"
            >
          {% else %}
            <div class="ai-image-grid-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        
        {% if block.settings.text != blank %}
          <p class="ai-image-grid-text-{{ ai_gen_id }}">{{ block.settings.text }}</p>
        {% endif %}
      {% if block.settings.link != blank %}
        </a>
      {% else %}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Image grid item",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Image grid item"
    }
  ],
  "tag": null
}
{% endschema %}